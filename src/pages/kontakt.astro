---
import Displaybillede from "../components/Displaybillede.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="/styles/generel.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500&display=swap" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Hubballi&display=swap" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet" />
    <title>Astro</title>
  </head>
  <Header />
  <body>
    <Displaybillede baggrund="img/kontakt/kontakt.webp" text="KONTAKT" />

    <h1>SKRIV TIL OS</h1>

    <div class="form">
      <form>
        <div>
          <input type="text" id="navn" placeholder="NAVN" />
          <input type="text" id="telefon" placeholder="TELEFON" />
        </div>
        <input type="text" id="email" placeholder="EMAIL" />
        <div>
          <input type="text" id="kommentar" placeholder="KOMMENTAR" />
        </div>

        <input type="submit" value="INDSEND" />
      </form>
    </div>

    <section>
      <div class="kontaktgrid">
        <div class="shadow">
          <img src="/img/kontakt/kontakt1.webp" alt="billede" />
        </div>

        <div class="shadow">
          <img src="/img/kontakt/kontakt2.webp" alt="billede" />
        </div>

        <div class="shadow">
          <img src="/img/kontakt/kontakt3.webp" alt="billede" />
        </div>

        <div class="shadow">
          <img src="/img/kontakt/kontakt4.webp" alt="billede" />
        </div>
      </div>
    </section>
    <Footer />
  </body>

  <style>
    h1 {
      margin-bottom: 60px;
    }
    form {
      text-align: center;
      padding-bottom: 70px;
    }

    input {
      background-color: var(--surface-beige);
      border: none;
      padding: 10px;
    }

    input[type="submit"] {
      border: 1px solid var(--brand-color);
      background-color: white;
    }

    input[type="submit"]:hover {
      background-color: rgb(84, 191, 212);
      color: white;
    }
    #email {
      width: 40%;
      margin-top: 15px;
    }
    #kommentar {
      width: 40%;
      height: 100px;
      padding: 12px 20px;
      resize: none;
      margin-top: 15px;
      margin-bottom: 20px;
    }

    #navn {
      width: 19%;
      margin-right: 10px;
    }
    #telefon {
      width: 20%;
    }

    @media (min-width: 700px) {
      .kontaktgrid {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr;
        gap: 30px;
        margin: auto;
        margin-block: 60px;
        width: 90%;
        place-content: center;
      }
    }
  </style>
</html>
