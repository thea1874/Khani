---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Button from "../components/Button.astro";
import Category from "../components/Category.astro";
import Gaveide from "../components/Gaveide.astro";
import Insta from "../components/Insta.astro";
import Shelf2 from "../components/Shelf2.astro";
import Productcard from "../components/Productcard.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/styles/generel.css" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Hubballi&display=swap" rel="stylesheet" />
    <title>Astro</title>
  </head>
  <Header />
  <body>
    <div class="youtubevideo">
   <iframe width="1000" height="563" src="https://www.youtube.com/embed/OX9mPYRpXvY?autoplay=1&mute=1&controls=0&loop=1" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
   </div>
   <div class="margin">
      <h1>Khani smykker</h1>
      <h2 style="text-align: center; margin-bottom: 30px;">Find dine vandfaste smykker her</h2>
      <Button variant="secondary" size="large" placement="index"><a href="#" style="color: var(--text-blue)">SHOP</a></Button>
    </div>
    <h3 class="baggrund">Mest populære smykker:</h3>
    <Shelf2>
      <Productcard img="/img/forside/product1.webp" NAME="XENA guld" PRIS="159 DKK" />
      <Productcard img="/img/forside/product2.webp" NAME="ALYSIDA guld" PRIS="159 DKK" />
      <Productcard img="/img/forside/product3.webp" NAME="ANKYRA sølv" PRIS="159 DKK" />
      <Productcard img="/img/forside/product4.webp" NAME="AGETHE guld" PRIS="139 DKK" />
    </Shelf2>
    <Category />
    <Gaveide />
    <Insta />
    <Footer />
  </body>

  <style>
    a {
      list-style-type: none;
      text-decoration: none;
      color: var(--text-white);
      font-family: "Hubballi", cursive;
    }

    .youtubevideo{
      text-align: center;
      display: block;
    }

    iframe {
      margin: auto 0px;
    }

    .margin {
      margin: 0px 0px 60px 0px;
    }

    .baggrund {
      background-color: var(--surface-beige);
    }

    h3 {
      padding-top: 35px;
      text-align: center;
    }
  </style>
</html>
