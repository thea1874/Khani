---
const { img, NAME, PRIS } = Astro.props;
---

<article>
  <figure class="container1">
    <a href="/produktside"><img src={img} alt="" height="250" width="250" /></a>
    <h3 class="navn">{NAME}</h3>
    <p class="pris">{PRIS}</p>
  </figure>
</article>

<style>
  h3 {
    font-size: 1.2rem;
    margin-top: 5px;
    font-weight: bold;
    text-align: left;
  }

  p {
    text-align: left;
  }

  @media (max-width: 1200px) {
    h3 {
      font-size: 0.9rem;
      margin-top: 5px;
      font-weight: bold;
      text-align: left;
    }

    p {
      text-align: left;
      font-size: 0.7rem;
    }
  }

  @media (max-width: 800px) {
    h3 {
      font-size: 1.2rem;
      margin-top: 5px;
      font-weight: bold;
      text-align: left;
    }

    p {
      text-align: left;
      font-size: 1rem;
    }
  }
</style>
